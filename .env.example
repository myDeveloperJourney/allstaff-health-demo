# Environment Variables
# Copy this file to .env.local and fill in your actual values

# Recruiter Flow API (placeholder)
RF_API_URL=https://api.recruiterflow.com/v1
RF_API_KEY=your_recruiter_flow_api_key_here

# hCaptcha Configuration (test keys)
HCAPTCHA_SITE_KEY=10000000-ffff-ffff-ffff-000000000001
HCAPTCHA_SECRET_KEY=0x0000000000000000000000000000000000000000

# Cloudflare Turnstile (alternative - test keys)
TURNSTILE_SITE_KEY=1x00000000000000000000000000000000000000000
TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000000000000

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Rate Limiting (Upstash Redis - optional)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=notifications@allstaffhealth.com